<script type="text/javascript">
    var __IsNeedInit = true;
    $(document).ready(function () {
//        console.log("ready start");
        if ($.browser.msie && $.browser.version < 10) {
            $('body').addClass('ltie10');
        }
        initFullpage();
    });
    function initFullpage() {
        if (!__IsNeedInit) {
            return; //ready会调用两次 防止初始化重复
        }
        __IsNeedInit = false;
//        console.log("initFullpage start");
        $.fn.fullpage({
            verticalCentered: false,
            anchors: ['page1', 'page2', 'page3', 'page4'],
            navigation: true,
            loopTop: true,
            loopBottom: true,
            scrollingSpeed:700,
            afterRender: function () {
                __IsNeedInit = false;
            }
        });
//        console.log("initFullpage end");
    }
</script>

